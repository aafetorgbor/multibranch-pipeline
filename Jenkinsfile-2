pipeline {

    agent any
    
    
      stages{
        stage('Test') {
             when {
                branch 'main'
            }
            steps {
                sh """
                echo "This only run when we are on the MAIN branch"
                pytest -v
                """
            }
        }
        
        
         stage('Test') {
             when {
                branch 'dev'
            }
            steps {
                sh """
                echo "This only run when we are on the DEV branch"
                pytest -v
                """
            }
        }
    
       
         stage('For PR') {
            when {
                branch 'PR-*'
            }
            steps {
                sh """
                echo "This stage only run for PR"
                pytest -v
                """

            }
        }

    }   
}
