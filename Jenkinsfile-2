pipeline {

    agent any

    stages {
        
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
                sh """
                echo "Cleaned Up Workspace For Project"
                """
            }
        }

        
        
        stage(' Build') {
             when {
                branch 'develop'
            }
            steps {
                sh """
                echo "This only run when we are on the develop branch"
                """
            }
        }

       
        stage('For PR') {
            when {
                branch 'PR-*'
            }
            steps {
                sh """
                echo "This stage only run for PR"
                pytest3 -v
                """

            }
        }

    }   
}
